# SSL/TLS Security Parameters
# Managed by Ansible - eyebrowkang.nginx role

# SSL Protocols and Ciphers
{% if nginx_ssl_policy == 'modern' %}
# TLSv1.3 only - no cipher configuration needed (TLSv1.3 has fixed secure ciphers)
ssl_protocols TLSv1.3;
{% else %}
# Intermediate: TLSv1.2 + TLSv1.3
ssl_protocols TLSv1.2 TLSv1.3;
ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;
ssl_prefer_server_ciphers off;
{% if nginx_ssl_dhparam_enabled %}
ssl_dhparam {{ nginx_ssl_certs_path }}/dhparam.pem;
{% endif %}
{% endif %}

# SSL Session
ssl_session_timeout 1d;
ssl_session_cache shared:SSL:10m;
ssl_session_tickets off;

# OCSP Stapling
{% if nginx_ssl_stapling_enabled %}
ssl_stapling on;
ssl_stapling_verify on;
resolver 1.1.1.1 8.8.8.8 valid=300s;
resolver_timeout 5s;
{% endif %}
